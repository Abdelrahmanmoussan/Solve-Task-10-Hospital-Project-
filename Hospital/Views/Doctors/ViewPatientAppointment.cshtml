@model List<Hospital.Models.PatientAppointment>

@{
    ViewData["Title"] = "Patient List";
}

<h2>Patient List</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Patient Name</th>
            <th>Doctor ID</th>
            <th>Doctor Name</th>
            <th>Appointment Date</th>
            <th>Appointment Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int index = 1;
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@patient.PatientName</td>
                    <td>@patient.DoctorId</td>
                    <td>@patient.DoctorName</td>
                    <td>@patient.AppointmentDate.ToShortDateString()</td>
                    <td>@patient.AppointmentTime</td>
                    <td> 
                        <a asp-action="EditPatient" asp-route-id="@patient.Id" class="btn btn-warning btn-sm">Edit</a> 
                         @* <a asp-action="DeletePatient" asp-route-id="@patient.Id" class="btn btn-danger btn-sm">Delete</a> *@
                     </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No patients found.</td>
            </tr>
        }
    </tbody>
</table>

